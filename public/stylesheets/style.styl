@import '_fonts'
@import '_vars'

body
  margin 0
  font-family "Google"
  background-color rgba($primary, 0.02)

.content
  margin-top 40px

.navbar
  border-bottom 1px solid rgba($primary, .1)
  .menu-wrapper
    justify-content space-between
    align-items center
    height 70px
    .logo
      a 
        font-size 20px
        font-weight 900
    li
      list-style none
    a 
      font-family "Google"
      color $primary
      text-decoration none
      

.card
  border 1px solid rgba($primary, .2)
  background-color #fff
  box-shadow 0 1px 4px 0 rgba($primary, 0.1)
  padding 10px 20px
  border-radius $radius
  color $primary
  position relative
  display flex
  align-items center
  justify-content space-between
  .data-id
    position absolute 
    top -10px
    left -5px
    background-color $primary
    color #fff
    border-radius 30px
    font-size 11px
    padding 5px 10px
    letter-spacing 2px
  .fullname
    font-weight 500
  .lang
    background-color $primary
    height 34px
    padding 0 20px
    border-radius 100px
    color #fff
    display inline-block
    line-height 34px
    text-align center
    margin-left 10px
  .username
    font-weight 900
    margin-right 10px
  &+&
    margin-top 16px

.btn
  cursor pointer
  border 1px solid $primary
  padding 10px 20px
  border-radius $radius
  transition: $transition
  background-color #fff
  &:hover
    box-shadow 0 0 0 3px rgba($primary, 0.3)

.container 
  max-width 1440px
  width: 1100px
  margin 0 auto
.row 
    display flex




