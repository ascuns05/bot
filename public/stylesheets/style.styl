@import '_fonts'
@import '_vars'

body
  margin 0
  font-family "Google"

.navbar
  .menu-wrapper
    justify-content space-between
    align-items center
    height 90px
    .logo
      a 
        font-size 20px
        font-weight 900
    li
      list-style none
    a 
      font-family "Google"
      color $primary
      text-decoration none
      

.card
  border 1px solid $primary
  padding 10px 20px
  border-radius $radius
  color $primary
  position relative
  .data-id
    position absolute 
    top -10px
    left -5px
    background-color $primary
    color #fff
    border-radius 30px
    font-size 11px
    padding 5px 10px
    letter-spacing 2px
  .fullname
    font-weight 500
  .lang
    background-color $primary
    height 34px
    width 34px
    border-radius 50%
    color #fff
    display inline-block
    line-height 34px
    text-align center
    margin-left 10px
  .username
    font-weight 900
    margin-right 10px
  &+&
    margin-top 10px

.btn
  cursor pointer
  border 1px solid $primary
  padding 10px 20px
  border-radius $radius
  transition: $transition
  &:hover
    box-shadow 0 0 0 3px rgba($primary, 0.4)

.container 
  max-width 1440px
  width: 1100px
  margin 0 auto
  display flex




