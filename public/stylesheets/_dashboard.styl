@import '_vars'

.card
  border 1px solid rgba($primary, .2)
  background-color #fff
  box-shadow 0 1px 4px 0 rgba($primary, 0.1)
  padding 10px 20px
  border-radius $radius
  color $primary
  position relative
  display flex
  align-items center
  justify-content space-between
  .data-id
    position absolute 
    top -10px
    left -5px
    background-color $primary
    color #fff
    border-radius 30px
    font-size 11px
    padding 5px 10px
    letter-spacing 2px
  .fullname
    font-weight 500
  .lang
    background-color $primary
    height 34px
    padding 0 20px
    border-radius 100px
    color #fff
    display inline-block
    line-height 34px
    text-align center
    margin-left 10px
  .username
    font-weight 900
    margin-right 10px
  &+&
    margin-top 16px

.card-description
  font-size 23px
  font-weight 900
  margin-bottom 20px

.save-btn 
  float right 
  margin-top 20px
  font-size 13px
  color $primary
  font-weight 500
.controls-wrapper
  .right
    width 100%
  textarea 
    font-size 14px
    line-height 15px
    width 100%
    text-align right 


.sheludes 
  margin-top 50px
  .l4
    margin-bottom 10px
  .card
    flex-direction column
    text-align left
    align-items flex-start
    justify-content flex-start
    height 100%
    box-sizing border-box
  span
    font-size 12px
    margin-bottom 4px